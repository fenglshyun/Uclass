/* pages/login/login.wxss */
page{
background-color: #7B84DF;
height: 100%;
position: relative;
}
.container{
  display: flex;
  height: 100%;
  justify-content: center;
}
.input-label{
  color: #fff;
  display: inline-block;
  vertical-align:middle;
  width: 100rpx;
  
  border-right:solid #fff 2rpx; 
  text-align: center;

}
.input-group input{
  display: inline-block;
  vertical-align:middle;
  margin-left:40rpx; 
   width: 400rpx;
   height: 70rpx;
 
}
.input-group{
  background-color: #A4B0EC;
  margin-top: 40rpx;
  display: inline-block;
   border-radius: 20rpx;
   width: 560rpx;
}
.login-text{
  margin-top:30rpx; 
  position: relative;
  left: 245rpx;
  color: #fff;
  text-decoration:underline;
}
.help{
  position: absolute;
  height: 800rpx;
  width: 600rpx;
  background-color:rgba(85, 105, 204, 0.699); 
  border-radius:10rpx; 
  z-index: 99;
  padding: 20rpx;
  box-shadow:0px 0px 1px #000;

}
.box-bd{
  /* display: flex; */
  /* justify-content: left; */
}
.help-q{
  color: #B5B6B6;
  padding: 20rpx;
}
.help-a{
  padding-left: 20rpx;
  color: black;
  
}
.login-help{
  text-align: center;
  padding-bottom: 20rpx;
  border-bottom: solid #fff 1rpx;
  
}

.login-help-img{
 
  width: 40rpx;
  height: 40rpx;
  float: right;
}
.login-button{
  display: inline-block;
  width: 560rpx;
  margin-top: 50rpx;
  
  
}
.login-button button{
  background-color: #DDEEFA;
  text-align: center;
  height: 70rpx;
  color: #8893E8;
  line-height: 65rpx;
  border-radius:20rpx; 
}